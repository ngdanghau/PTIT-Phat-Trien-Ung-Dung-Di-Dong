<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Transaction.TransactionMenuActivity">

    <ImageView
        android:paddingTop="100dp"
        android:layout_gravity="center"
        android:src="@drawable/transaction_menu_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="14sp"/>
    <TextView
        style="@style/text_view_color_theme_style"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:textSize="24sp"
        android:textAlignment="center"
        android:text="@string/transaction_menu_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_gravity="center"
        android:textSize="14sp"
        android:text="@string/create_income_transaction"
        android:id="@+id/transactionMenuButtonCreateIncome"
        style="@style/button_style"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_gravity="center"
        android:textSize="14sp"
        android:text="@string/create_expense_transaction"
        android:id="@+id/transactionMenuButtonCreateExpense"
        style="@style/button_style"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_gravity="center"
        android:textSize="14sp"
        android:text="@string/create_statement"
        android:id="@+id/transactionMenuButtonCreateStatement"
        style="@style/button_style"/>

</LinearLayout>