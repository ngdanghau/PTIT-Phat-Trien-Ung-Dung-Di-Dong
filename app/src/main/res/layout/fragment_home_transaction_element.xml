<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginStart="20sp"
    android:layout_marginTop="5sp"
    android:id="@+id/fragmentHomeTransactionLayout"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fragmentHomeTransactionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nghiên cứu Jagdpanzer E-100"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fragmentHomeTransactionCategory"
        android:layout_below="@id/fragmentHomeTransactionName"
        android:text="Pháo chống tăng"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/fragmentHomeTransactionAmount"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="23dp"
        android:layout_toEndOf="@id/fragmentHomeTransactionName"
        android:text="150000"
        android:textAlignment="center"
        android:textColor="#558B2F"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fragmentHomeTransactionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragmentHomeTransactionAmount"
        android:layout_marginStart="232dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="23dp"
        android:layout_toEndOf="@+id/fragmentHomeTransactionCategory"
        android:text="01/05"
        android:textSize="12sp" />

</RelativeLayout>