            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragmentHomeAuthRemaining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragmentHomeTitleHeader"
